{
  "rules": {
    ".read": "false",
    ".write": "false",

    // In case the demo should host a consumer application.
    "provider": {
      "oauth1": {
        ".read": "auth != null && auth.isWorker == true",

        "$consumerKey": {
          ".validate": "newData.hasChildren(['secret', 'createdAt'])",
          ".write": "data.exists() == false && newData.exists()",

          "secret": {
            ".validate": "newData.isString()"
          },
          "createdAt": {
            ".validate": "newData.val() == now"
          }
        }
      }
    }
  }
}
